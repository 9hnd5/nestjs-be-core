{
    "name": "be-core",
    "version": "1.2.2",
    "description": "",
    "author": "",
    "license": "UNLICENSED",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build && tsc-alias",
        "build:dev": "rimraf dist && nest build && tsc-alias && yes | cp -rf ./dist ../nestjs-shop-service/node_modules/be-core",
        "build:webpack": "rimraf dist && webpack && tsc-alias",
        "format": "prettier --write \"src/**/*.ts\" ",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --passWithNoTests",
        "test:cover": "jest --converage",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.7",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.0.7",
        "@nestjs/cqrs": "^9.0.1",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/mapped-types": "^1.1.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.7",
        "@types/ioredis": "^4.28.10",
        "axios": "^0.27.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "date-fns": "^2.28.0",
        "flatted": "^3.2.7",
        "ioredis": "^5.0.6",
        "lodash": "^4.17.21",
        "mongodb": "^4.7.0",
        "mysql2": "^2.3.3",
        "nodemailer": "^6.7.7",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.6",
        "typeorm": "^0.3.7"
    },
    "peerDependencies": {
        "@nestjs/common": "^9.0.7",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.0.7",
        "@nestjs/typeorm": "^9.0.0",
        "typeorm": "^0.3.7"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.7",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.6",
        "@types/lodash": "^4.14.182",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.6.2",
        "@types/nodemailer": "^6.4.4",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^3.2.4",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "husky": "^8.0.0",
        "jest": "28.1.3",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "terser-webpack-plugin": "^5.3.5",
        "ts-jest": "28.0.7",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsc-alias": "^1.6.11",
        "tsconfig-paths": "4.0.0",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.7.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "keywords": [
        "saaspience"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hoangnguyenoneicc/nestjs-be-core"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1",
            "^config/(.*)$": "<rootDir>/../config/$1"
        },
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
